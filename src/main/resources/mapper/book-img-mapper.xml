<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 해당 파일에 모든 쿼리문을 작성 -->
<!-- namespace에는 xml파일과 연결할 Mapper interface 파일명을 패키지를 포함하여 적어주세요 -->
<mapper namespace="com.green.book_shop.book.mapper.BookImgMapper">
    <resultMap id="bookImg" type="com.green.book_shop.book.dto.BookImgDTO">
        <id     column="IMG_NUM"            property="imgName"/>
        <result column="ORIGIN_FILE_NAME"   property="originFileName"/>
        <result column="UPROAD_FILE_NAME"   property="uproadFileName"/>
        <result column="IS_MAIN"            property="isMain"/>
        <result column="BOOK_NUM"           property="bookNum"/>
    </resultMap>

    <!--도서 이미지 등록-->
    <insert id="insertImages">
        INSERT INTO BOOK_IMG (
            ORIGIN_FILE_NAME
            , UPROAD_FILE_NAME
            , IS_MAIN
            , BOOK_NUM
        )
        VALUES
        <!--collection : 반복할 데이터, item : 반복할 데이터에서 하나씩 뺀 데이터 -->
        <!--separator : 한 번 반복할 때 마다 실행할 쿼리문(마지막 반복 후에는 적용 X)-->
        <!--imgList : List<BookImgDTO>, img : BookImgDTO-->
        <foreach collection="imgList" item="img" separator=",">
            (
                #{img.originFileName},
                #{img.uproadFileName},
                #{img.isMain},
                #{img.bookNum}
            )
        </foreach>
    </insert>

</mapper>































